             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="YouTubeDownloader.App"
             xmlns:local="using:YouTubeDownloader"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme/>
        <StyleInclude Source="/src/Styles/MainStyle.axaml"/>
        <StyleInclude Source="/src/Resources/BaseResources.axaml"/>
        <StyleInclude Source="/src/Resources/LightTheme.axaml"/> <!-- TODO: Adjust according to theme -->
    </Application.Styles>
    
</Application>